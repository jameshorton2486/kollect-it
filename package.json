{
  "name": "kollect-it-marketplace",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 --turbopack",
    "build": "next build",
    "analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "bunx tsc --noEmit && bunx eslint . --max-warnings=0",
    "typecheck": "bunx tsc --noEmit",
    "format": "bunx biome format --write",
    "check": "bunx tsc --noEmit && bunx eslint . --max-warnings=0 && next build",
    "db:generate": "bunx prisma generate",
    "db:migrate": "bunx prisma migrate dev --name init",
    "db:migrate:deploy": "bunx prisma migrate deploy",
    "db:push": "bunx prisma db push",
    "db:seed": "bunx prisma db seed",
    "db:studio": "bunx prisma studio",
    "db:setup": "bunx prisma generate && bunx prisma migrate dev --name init && bunx prisma db seed",
    "postinstall": "bunx prisma generate",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "setup:imagekit": "bun run setup-imagekit-sync.ts",
    "sync-images": "bun run scripts/sync-drive-to-imagekit.ts",
    "sync-images:watch": "bun run --watch scripts/sync-drive-to-imagekit.ts",
    "sync-images:rest": "bun run scripts/upload-to-imagekit-rest.ts",
    "sync-status": "bun run scripts/sync-status.ts",
    "sync-help": "bun run scripts/sync-help.ts",
    "watch-google-drive": "bun run scripts/watch-google-drive.ts",
    "sync-from-google-drive": "curl -X POST http://localhost:3000/api/products/sync-from-google-drive",
    "process-batch": "bun run scripts/process-batch.ts",
    "validate-product": "bun run scripts/validate-product.ts",
    "test-imagekit": "bun run scripts/test-imagekit.ts",
    "test-google-drive": "bun run scripts/test-google-drive.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@auth/prisma-adapter": "^2.11.1",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^6.19.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-email/components": "^0.5.7",
    "@stripe/react-stripe-js": "^5.3.0",
    "@stripe/stripe-js": "^8.4.0",
    "@types/nodemailer": "^7.0.3",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "framer-motion": "^11.0.0",
    "googleapis": "^164.1.0",
    "imagekit": "^6.0.0",
    "lucide-react": "^0.475.0",
    "next": "15.5.6",
    "next-auth": "^4.24.13",
    "nodemailer": "^7.0.10",
    "openai": "^6.8.1",
    "prisma": "^6.18.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-email": "^4.3.1",
    "recharts": "^3.3.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^19.3.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/eslintrc": "^3.3.1",
    "@next/bundle-analyzer": "^15.0.0",
    "@playwright/test": "^1.56.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20.17.50",
    "@types/react": "^18.3.22",
    "@types/react-dom": "^18.3.7",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  }
}
